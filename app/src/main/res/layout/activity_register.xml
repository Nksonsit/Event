<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offwhite"
    tools:context=".ui.RegisterActivity">

    <ImageView
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_52dp"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:src="@drawable/logo" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_72dp"
        app:cardCornerRadius="@dimen/dimen_8dp"
        app:cardElevation="@dimen/dimen_8dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        app:contentPadding="@dimen/dimen_16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_52dp">

                <com.nestnfly.event.custom.TfEditText
                    android:id="@+id/edtYourName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:hint="Your Name"
                    android:inputType="textNoSuggestions"
                    android:lines="1"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/N_TEXT" />
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_8dp" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_52dp">

                <com.nestnfly.event.custom.TfEditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:hint="Your E-mail address"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/N_TEXT" />
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_8dp" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_52dp">

                <com.nestnfly.event.custom.TfEditText
                    android:id="@+id/edtNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:hint="Contact Number"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="12"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/N_TEXT" />
            </android.support.design.widget.TextInputLayout>


            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_8dp" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_52dp">

                <com.nestnfly.event.custom.TfEditText
                    android:id="@+id/edtCompanyName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:hint="Company Name"
                    android:inputType="textNoSuggestions"
                    android:lines="1"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/N_TEXT" />
            </android.support.design.widget.TextInputLayout>


            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_8dp" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_52dp">

                <com.nestnfly.event.custom.TfEditText
                    android:id="@+id/edtCompanyProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:hint="Company Profile (What do you do?)"
                    android:inputType="textNoSuggestions"
                    android:lines="1"
                    android:maxLength="150"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/N_TEXT" />
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_8dp" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_52dp">

                <com.nestnfly.event.custom.TfEditText
                    android:id="@+id/edtChallenge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:hint="What's Your Biggest Challenge?"
                    android:inputType="textNoSuggestions"
                    android:lines="1"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/N_TEXT" />
            </android.support.design.widget.TextInputLayout>

            <com.nestnfly.event.custom.TfButton
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_42dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:background="@drawable/orange_btn"
                android:text="Register Now"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:gravity="right"
                android:orientation="horizontal">

                <com.nestnfly.event.custom.TfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account ? "
                    android:textColor="@color/colorPrimaryDark" />

                <com.nestnfly.event.custom.TfTextView
                    android:id="@+id/txtSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign In"
                    android:textColor="@color/orange"
                    app:isBold="true" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>